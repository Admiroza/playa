<?xml version="1.0" encoding="utf-8"?>
 
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/frags">

    <fragment
        android:id="@+id/titles_frag"
        android:layout_width="@dimen/titles_size"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        class="com.example.android.hcgallery.TitlesFragment" />

 <fragment
     android:id="@+id/content_frag"
     android:layout_width="150dp"
     android:layout_height="match_parent"
     android:layout_alignParentRight="true"
     android:layout_alignParentTop="true"
     android:layout_marginRight="154dp"
     class="com.example.android.hcgallery.ContentFragment" />

 <fragment
     android:id="@+id/info_frag"
     android:layout_width="150dp"
     android:layout_height="match_parent"
     android:layout_alignParentTop="true"
     android:layout_toLeftOf="@+id/content_frag"
     class="com.example.android.hcgallery.ContentFragment" />

</RelativeLayout>